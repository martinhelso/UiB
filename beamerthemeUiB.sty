\setbeamertemplate{title page}
{
    \begin{center}
        \usebeamerfont{title}
        \inserttitle
        \\
        \usebeamerfont{subtitle}
        \insertsubtitle
    \end{center}
    \begin{beamercolorbox}[wd        = \paperwidth,
                           ht        = 11 mm,
                           dp        = \dimexpr 0.4\paperheight - 11 mm \relax,
                           leftskip  = 1 em,
                           rightskip = 1 em]
                          {section in head/foot}
        \begin{minipage}[t][0.28\paperheight]{\textwidth}
            \centering
            \usebeamerfont{author}
            \insertauthor
            \vfill
            \hfill
            \includegraphics[scale = 0.4]{UiB-images/UiB-logo-\UiBlang}
        \end{minipage}
    \end{beamercolorbox}
    \vspace*{-1.3em}
}


